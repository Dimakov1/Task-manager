#:import NoTransition kivy.uix.screenmanager.NoTransition

<RailScreen>:
    name: 'rail_screen'
    MDBoxLayout:
        orientation: 'horizontal'

        # Левая панель с навигацией
        MDNavigationRail:
            id: nav_rail
            md_bg_color: app.theme_cls.backgroundColor
            type: 'labeled'
            current_selected_item: 0

            CommonNavigationRailItem:
                icon: "alert-circle"
                id: item_1
                ripple_effect: False
                theme_font_size: 'Custom'
                font_size: '15sp'
                text: 'favorite_tasks'

            CommonNavigationRailItem:
                icon: "bookmark"
                id: item_2
                ripple_effect: False
                text: "completed_tasks"


            CommonNavigationRailItem:
                icon: "robot"
                id: item_3
                ripple_effect: False
                radius: (24)*4
                text: 'gpt_screen'


            CommonNavigationRailItem:
                icon: "account"
                id: item_4
                text: 'profile_screen'



            CommonNavigationRailItem:
                icon: "plus-box"
                id: item_5
                text: "tasks"
                theme_text_color: "Custom"
                text_color: 'green'
            
            CommonNavigationRailItem:
                id: item_7
                text: 'unknown'
                MDWidget:
                MDWidget:
                MDWidget:



            CommonNavigationRailItem:
                icon: "account-arrow-left"
                id: item_6
                text: "login"


        ScreenManager:
            id: right_screen_manager
            transition: NoTransition()

            TaskScreen:
                name: 'tasks'

            AddTask:
                name: 'add_task'

            ProfileScreen:
                name: 'profile_screen'

            GPT:
                name: 'gpt_screen'


            FavoriteTasks:
                name: 'favorite_tasks'

            CompletedTasks:
                name: 'completed_tasks'