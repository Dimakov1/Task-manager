<ProfileScreen>:
    name: 'profile_screen'
    username: username
    mail: mail
    MDScreen:
        md_bg_color: app.theme_cls.backgroundColor
        MDBoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '40'
            size_hint: (.7, .6)
            pos_hint: {'center_x': .5, 'center_y': .6}

            MDLabel:
                text: "Учётная запись"
                font_style: "Headline"
                text_color: 'white'
                halign: 'center'

            FieldText:
                readonly: True
                text : f'{root.func_show_login()}'
                text_color: 'white'
                color_up: 'white'
                id: username
                on_focus: root.unfocus1()
                allow_selection: False
                icon: 'account'
                MDTextFieldHelperText:
                    text_color_normal: 'white'
                    text_color_focus: 'white'
                    text: 'Имя пользователя'
                    mode: 'persistent'

            FieldText:
                readonly: True
                id: mail
                on_focus: root.unfocus2()
                text: '------'
                text_color: 'white'
                color_up: 'white'
                icon: 'email'
                MDTextFieldHelperText:
                    text_color_normal: 'white'
                    text_color_focus: 'white'
                    text: 'Электронная почта'
                    mode: 'persistent'

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint:{'center_x': .5}
                padding: '10dp'
                spacing: '40'

                MDButton:
                    style: 'filled'
                    theme_bg_color: "Custom"
                    md_bg_color: "green"
                    MDButtonText:
                        text: "[b]ПРИВЯЗАТЬ ПОЧТУ[b]" 

                MDButton:
                    style: 'filled'
                    theme_bg_color: "Custom"
                    md_bg_color: "orange"
                    on_press: app.logout()
                    MDButtonText:
                        text: "[b]ВЫЙТИ[b]"

                MDButton:
                    style: 'filled'
                    theme_bg_color: "Custom"
                    md_bg_color: "red"
                    MDButtonText:
                        text: "[b]УДАЛИТЬ ПРОФИЛЬ[b]"
        
        MDBoxLayout:
            orientation: 'vertical'    
            size_hint: (.7, None)
            pos_hint: {'center_x': .5, 'center_y': .2}
            MDLabel:
                text: f'Количество созданных задач: {root.show_add()}'#Никита, нужно из бд в 81 и 87 строки выгружать инфу о тасках
                font_style: 'Label'
                text_color: 'green'
                halign: 'center'

            MDLabel:
                text: f'Количество удалённых задач: {root.show_delete()}'
                font_style: 'Label'
                text_color: 'red'
                halign: 'center'

ScreenManager:
    id: login_logout
    Login:
        name: 'login'


