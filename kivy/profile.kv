<ProfileScreen>:
    name: 'profile_screen'
    username: username
    mail: mail
    MDScreen:
        md_bg_color: app.theme_cls.backgroundColor
        MDBoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '40'
            size_hint: (.7, .6)
            pos_hint: {'center_x': .5, 'center_y': .6}

            MDLabel:
                text: "Учётная запись"
                font_style: "Headline"
                text_color: 'white'
                halign: 'center'

            FieldText:
                readonly: True
                text_color: 'white'
                color_up: 'white'
                id: username
                on_focus: root.unfocus1()
                allow_selection: False
                icon: 'account'
                MDTextFieldHelperText:
                    text_color_normal: 'white'
                    text_color_focus: 'white'
                    text: 'Имя пользователя'
                    mode: 'persistent'

            FieldText:
                readonly: True
                id: mail
                on_focus: root.unfocus2()
                text: '------'
                text_color: 'white'
                color_up: 'white'
                icon: 'email'
                MDTextFieldHelperText:
                    text_color_normal: 'white'
                    text_color_focus: 'white'
                    text: 'Электронная почта'
                    mode: 'persistent'

        
        MDBoxLayout:
            orientation: 'vertical'    
            size_hint: (.7, None)
            pos_hint: {'center_x': .5, 'center_y': .2}
            MDLabel:
                id: label_1
                text: ''
                font_style: 'Label'
                text_color: 'green'
                halign: 'center'

            MDLabel:
                id: label_2
                text: ''
                font_style: 'Label'
                text_color: 'red'
                halign: 'center'
            MDLabel:
                id: label_3
                text: ''
                font_style: 'Label'
                text_color: 'orange'
                halign: 'center'


ScreenManager:
    id: login_logout
    Login:
        name: 'login'


