<ProfileScreen>:
    name: 'profile_screen'
    username: username
    mail: mail
    MDScreen:
        md_bg_color: app.theme_cls.backgroundColor
        MDBoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '40'
            size_hint: (.7, .6)
            pos_hint: {'center_x': .5, 'center_y': .6}

            MDLabel:
                text: "Учётная запись"
                font_style: "Headline"
                text_color: 'white'
                halign: 'center'

            FieldText:
                readonly: True
                text :'привет'
                text_color: 'white'
                color_up: 'white'
                id: username
                on_focus: root.unfocus1()
                allow_selection: False
                icon: 'account'
                MDTextFieldHelperText:
                    text_color_normal: 'white'
                    text_color_focus: 'white'
                    text: 'Имя пользователя'
                    mode: 'persistent'

            FieldText:
                readonly: True
                id: mail
                on_focus: root.unfocus2()
                text_color: 'white'
                color_up: 'white'
                icon: 'email'
                MDTextFieldHelperText:
                    text_color_normal: 'white'
                    text_color_focus: 'white'
                    text: 'Электронная почта'
                    mode: 'persistent'

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint:{'center_x': .4}
                padding: '10dp'
                spacing: '40'
                MDButton:
                    style: 'filled'
                    theme_bg_color: "Custom"
                    md_bg_color: "green"
                    MDButtonText:
                        text: "[b]ПРИВЯЗАТЬ ПОЧТУ[b]"

                MDButton:
                    style: 'filled'
                    theme_bg_color: "Custom"
                    md_bg_color: "orange"
                    MDButtonText:
                        text: "[b]ВЫЙТИ[b]"

                MDButton:
                    style: 'filled'
                    theme_bg_color: "Custom"
                    md_bg_color: "red"
                    MDButtonText:
                        text: "[b]УДАЛИТЬ ПРОФИЛЬ[b]"

